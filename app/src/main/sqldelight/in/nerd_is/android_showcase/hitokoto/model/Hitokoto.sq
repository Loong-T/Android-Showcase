import org.threeten.bp.LocalDateTime;

CREATE TABLE hitokoto (
    id TEXT PRIMARY KEY NOT NULL,
    uid TEXT,
    catname TEXT,
    text TEXT NOT NULL,
    author TEXT,
    source TEXT,
    date INTEGER AS LocalDateTime
);

insert_hitokoto:
INSERT INTO hitokoto (id, uid, catname, text, author, source, date)
VALUES (?, ?, ?, ?, ?, ?, ?);

select_random:
SELECT *
FROM hitokoto
ORDER BY RANDOM() LIMIT 1;

count:
SELECT COUNT(*)
FROM hitokoto;